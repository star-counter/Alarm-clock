<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/top_cancel"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="4" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="20sp" 
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/action_settings"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/top_ok"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="4" />

    </LinearLayout>
    
	<View
		android:layout_width="match_parent"
		android:layout_height="1dip"
		android:background="@android:color/white" />
	
   <LinearLayout
       android:id="@+id/ll_bell_mode"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:weightSum="10" >

       <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:orientation="vertical"
	       android:layout_marginLeft="10dip"
	       android:gravity="center_vertical"
	       android:layout_weight="3" >
	
	       <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="20sp"
	           android:textColor="@android:color/black"
	           android:text="@string/bell_mode" />
	
	       <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="-5dip"
	           android:textColor="#CDCDB4"
	           android:text="@string/bell_mode_tip" />
	
	   </LinearLayout>

        <CheckBox
	        android:id="@+id/cb_check"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginRight="10dip"
	        android:layout_marginLeft="5dip"
	        android:button="@drawable/check_box"
	        android:clickable="false"
	        android:focusable="false"
	        android:layout_weight="7" />

   </LinearLayout>
   
   <View
		android:layout_width="match_parent"
		android:layout_height="1dip"
		android:background="@android:color/white" />
	
   <LinearLayout
       android:id="@+id/ll_cancel_mode"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:weightSum="10" >

       <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:orientation="vertical"
	       android:layout_marginLeft="10dip"
	       android:gravity="center_vertical"
	       android:layout_weight="3" >
	
	       <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="20sp"
	           android:textColor="@android:color/black"
	           android:text="@string/cancel_alarm_mode" />
	
	       <TextView
	           android:id="@+id/tv_cancel_mode"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="-5dip"
	           android:textColor="#CDCDB4"
	           android:text="@string/cancel_alarm_tip2" />
	
	   </LinearLayout>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="25dip"
           android:scaleType="fitCenter"
           android:layout_weight="7"
       	   android:layout_gravity="center_vertical"
           android:src="@drawable/right_w" />

   </LinearLayout>
   
   <View
		android:layout_width="match_parent"
		android:layout_height="1dip"
		android:background="@android:color/white" />
	
   <LinearLayout
       android:id="@+id/ll_num_times"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:weightSum="10" >

       <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:orientation="vertical"
	       android:layout_marginLeft="10dip"
	       android:gravity="center_vertical"
	       android:layout_weight="3" >
	
	       <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="20sp"
	           android:textColor="@android:color/black"
	           android:text="@string/num_time" />
	
	       <TextView
	           android:id="@+id/tv_num_time"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="-5dip"
	           android:textColor="#CDCDB4"
	           android:text="@string/num_time_tip" />
	
	   </LinearLayout>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="25dip"
           android:scaleType="fitCenter"
           android:layout_weight="7"
       	   android:layout_gravity="center_vertical"
           android:src="@drawable/right_w" />

   </LinearLayout>
   
   <LinearLayout
       android:id="@+id/ll_shake"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:orientation="horizontal"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:weightSum="10" >

       <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:orientation="vertical"
	       android:layout_marginLeft="10dip"
	       android:gravity="center_vertical"
	       android:layout_weight="3" >
	
	       <TextView
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:textSize="20sp"
	           android:textColor="@android:color/black"
	           android:text="@string/shake_title" />
	
	       <TextView
	           android:id="@+id/tv_shake"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="-5dip"
	           android:textColor="#CDCDB4"
	           android:text="@string/shake_tip" />
	
	   </LinearLayout>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="25dip"
           android:scaleType="fitCenter"
           android:layout_weight="7"
       	   android:layout_gravity="center_vertical"
           android:src="@drawable/right_w" />

   </LinearLayout>
   
</LinearLayout>
